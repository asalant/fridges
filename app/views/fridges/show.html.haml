- content_for :head do
  %meta{:property => "og:title", :content => "Check Out My Fridge!"}
  %meta{:property => "og:url", :content => "#{fridge_key_url(@fridge.key, :host => 'frdg.us')}"}
  %meta{:property => "og:image", :content => "#{@fridge.photo.url(:large)}"}
  %meta{:property => "og:site_name", :content => "checkoutmyfridge.com"}
  %meta{:property => "og:description", :content => "description content"}
  
  =stylesheet_link_tag 'http://w.sharethis.com/button/css/buttons.css'
  :javascript
    $(function(){
      $('body').facebook('#{Facebook::CONFIG['app_id']}');
    });

    $(window).load(function() {
      $("#fridge_photo")
        .annotateHandler({ target: '#note_details', ajax: true })
        .annotateImage({ editable: true });
    });


#nameband.grid_12
  - share_url = fridge_key_url(@fridge.key, :host => 'frdg.us')
  .user_photo
    = image_tag profile_image_url(@fridge.user)
  %h2= "#{@fridge.user.first_name}'s fridge"
  %h4= "In #{location_for(@fridge)}  on  #{@fridge.created_at.to_date.to_s(:short)} | #{number_with_delimiter @fridge.view_count} views"
  #sharelink
    Share this fridge:
    = link_to share_url
  .stButton
    %a.chicklets.facebook{:target => '_blank', :href => "http://www.facebook.com/sharer.php?u=#{share_url}", :title => 'Share this on Facebook'} Facebook
    %a.chicklets.twitter{:target => '_blank', :href => "http://twitter.com/share?text=Check Out My Fridge!&url=#{share_url}&via=checkoutmyfridge", :title => 'Tweet this'} Twitter
    %a.chicklets.digg{:target => '_blank', :href => "http://digg.com/submit?style=no&url=#{share_url}&title=Check Out My Fridge!", :title => 'Digg this'} Digg
    %a.chicklets.gbuzz{:target => 'blank', :href => "http://www.google.com/buzz/post?message=Check Out My Fridge!&url=#{share_url}&imageurl=#{@fridge.photo.url(:large)}", :title => 'Share this on Google Buzz'} Buzz
    %a.chicklets.email{:href => "mailto:?subject=Check Out My Fridge!&body=Check out this fridge at #{share_url}.", :title => 'Share this by email'} Email

.grid_8

  .photo
    =image_tag @fridge.photo.url(:large), :id => 'fridge_photo', 'data-id' => @fridge.id

  %br{:clear => 'all'}

  %h2 Talk about it!
  %br{:clear => 'all'}
  %fb:comments{:numposts => 40, :width => 600}


.grid_4
  -#%p="\"#{@fridge.description}\"" if !@fridge.description.blank?

  -if @fridge.owned_by? current_user
    %h3 What&rsquo;s inside your fridge?
    -if @fridge.notes.empty?
      .image-annotate-add
        %p <a href='#'>Add a note</a> to highlight stuff inside your fridge!
        %p.italic What&rsquo;s that on the top shelf?
    -else
      %a.image-annotate-add{:href => '#'} Add a note!
  -elsif !@fridge.notes.empty?
    %h3 What&rsquo;s inside the fridge
  -else
    .note_detail
      %p #{@fridge.user.first_name} hasn&rsquo;t added any annotations to his fridge yet.
      %p Check out the comments below the fridge&hellip;

  #note_details
